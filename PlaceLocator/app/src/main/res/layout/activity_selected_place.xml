<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_selected_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xcomputers.placelocator.SelectedPlaceActivity">

    <!-- TODO: Update blank fragment layout -->


    <HorizontalScrollView
        android:id="@+id/details_photo_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:background="#00ffffff"
        >


        <LinearLayout
            android:id="@+id/details_photo_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:background="@drawable/login_background">

        </LinearLayout>

    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/details_social_layout"
        android:layout_alignLeft="@+id/details_social_layout"
        android:layout_alignRight="@+id/details_social_layout"
        android:scaleY="-1">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/details_social_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="right"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/details_rating_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.2"
            android:layout_gravity="top|start"
            android:textSize="20sp"
            />


        <RatingBar
            android:id="@+id/details_rating_rb"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="3.5"
            android:scaleX="0.75"
            android:scaleY="0.75"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_fav_img"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_share_img"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:scaleX="0.75"
            android:scaleY="0.75"/>
        <!--android:background="@drawable/button_shape_dark"/>-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_streetview_img"

            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:scaleX="0.75"
            android:scaleY="0.75"/>


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_photo_scroll_view"
        android:layout_alignParentBottom="true"
        android:background="@drawable/black_gradient"
        android:scaleY="-1"
        android:id="@+id/relativeLayout">
    </RelativeLayout>

    <TextView
        android:id="@+id/details_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="botevgradsko shose 11"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/details_photo_scroll_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:freezesText="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
       />
    <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reviewsTV"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="reviews"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@id/details_address"
        android:layout_toRightOf="@id/details_address"
        android:layout_alignParentEnd="true"
        android:gravity="start"
        android:layout_alignParentRight="true" />
        -->

    <TextView
        android:id="@+id/details_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/details_ETA"
        android:text="open time"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/details_ETA"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:freezesText="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"/>

    <FrameLayout
        android:id="@+id/details_map_reviews_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/details_ETA"
        android:layout_above="@+id/details_interact_layout"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/details_interact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <Button
            android:id="@+id/details_website_url"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="visit website"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/transparent"
            android:drawableBottom="@drawable/website_visit_us"


            />


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Call us!"
            android:drawableBottom="@drawable/call_us_mini_icon"
            android:background="@color/transparent"
            android:id="@+id/details_dial_button" />


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="See on map"
            android:background="@color/transparent"
            android:drawableBottom="@drawable/gmaps"
            android:id="@+id/details_reserve_button" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#00ffffff"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Happy-Bar"
            android:textSize="35sp"
            android:layout_gravity="center" />

    </FrameLayout>

    <TextView
        android:id="@+id/details_ETA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_below="@+id/details_address"
        android:layout_alignLeft="@+id/details_address"
        android:layout_alignStart="@+id/details_address" />


</RelativeLayout>
